/     br
/     = f.text_field :first_name, autofocus: true
/   .field
/     = f.label :last_name
/     br
/     = f.text_field :last_name
/   .field
/     = f.label :gender
/     br
/     = f.text_field :gender
/   .field
/     = f.label :about_me
/     br
/     = f.text_field :about_me
/   .field
/     = f.label :current_password
/     br
/     = f.password_field :current_password
