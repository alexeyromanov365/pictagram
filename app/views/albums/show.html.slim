= link_to user_albums_path
  = image_tag image_path("return.png", size: "30x30" , class: 'back-icon')
p
  strong Album title:
  = " "
  = @album.title
p
  strong Album description:
  = " "
  = @album.description
p
  strong Album tags:
  = " "
  = raw @album.tags.map(&:name).map{ |t| link_to t, tag_path(t), class: 'tag tag-primary' }.join(' ')
- if can? :create, @album
  = link_to "New photo", new_user_album_photo_path(@user, @album)
  p
- if can? :edit, @album
  = link_to 'Edit album', edit_user_album_path(@user, @album)
